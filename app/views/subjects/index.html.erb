<% @page_title = "Subjects" %>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>


<div class="subjects index">
  <h2>Subjects</h2>

  <%=  %>
  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Subject", {:controller => 'subjects', :action => 'new'}, :class => 'action new') %>

  <div> <%= pluralize(@subjects.size, 'subject') %> found. </div>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= status_tag(subject.visible) %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="center"><%= subject.created_at %></td>
      <td class="actions">
        <%= link_to("Show", {:controller => 'subjects', :action => 'show', :id => subject.id}, :class => 'action show') %>
        <%= link_to("Edit", {:controller => 'subjects', :action => 'edit', :id => subject.id}, :class => 'action edit') %> 
        <%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
